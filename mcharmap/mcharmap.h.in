#ifndef MCHARMAP_H
#define MCHARMAP_H

#define __MCHARMAP_MCHARMAP_H_INSIDE__

#define MCHARMAP_VERSION_MAJOR (@MCHARMAP_VERSION_MAJOR@)
#define MCHARMAP_VERSION_MINOR (@MCHARMAP_VERSION_MINOR@)
#define MCHARMAP_VERSION_MICRO (@MCHARMAP_VERSION_MICRO@)

#define MCHARMAP_CHECK_VERSION(major,minor,micro) \
  (MCHARMAP_VERSION_MAJOR > (major) || \
   (MCHARMAP_VERSION_MAJOR == (major) && MCHARMAP_VERSION_MINOR > (minor)) || \
   (MCHARMAP_VERSION_MAJOR == (major) && MCHARMAP_VERSION_MINOR == (minor) && MCHARMAP_VERSION_MICRO >= (micro)))

#include <mcharmap/mcharmap-codepoint-list.h>
#include <mcharmap/mcharmap-block-codepoint-list.h>
#include <mcharmap/mcharmap-script-codepoint-list.h>

#include <mcharmap/mcharmap-chapters-model.h>
#include <mcharmap/mcharmap-block-chapters-model.h>
#include <mcharmap/mcharmap-script-chapters-model.h>

#include <mcharmap/mcharmap-chartable.h>
#include <mcharmap/mcharmap-charmap.h>

#include <mcharmap/mcharmap-type-builtins.h>

#include <mcharmap/mcharmap-unicode-info.h>

#undef __MCHARMAP_MCHARMAP_H_INSIDE__

#endif /* #ifndef MCHARMAP_H */
